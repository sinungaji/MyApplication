<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvPengumumanumum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                app:cardUseCompatPadding="true">

                <ImageView
                    android:id="@+id/tumbnailpengumumanumum"
                    android:layout_width="350dp"
                    android:layout_height="175dp"
                    android:scaleType="centerCrop"/>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.75"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tanggalTayangTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="tgl Tayang"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-condensed-medium"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp">

                    <TextView
                        android:id="@+id/judulpengumumanumumTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:maxLength="30"
                        android:text="Judul Pengumuman"
                        android:textColor="@color/black"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/isipengumumanumumTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:maxLength="100"
                        android:maxLines="2"
                        android:text="Isi Pengumuman"
                        android:textAlignment="textStart"
                        android:textColor="@color/abuabu"
                        android:textSize="12sp"
                        android:layout_below="@+id/judulpengumumanumumTV"/>

                    <TextView
                        android:id="@+id/tgltayangpengumumanumumTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:text="00:00"
                        android:textAlignment="textStart"
                        android:textColor="@color/abuabu"
                        android:textSize="12sp"
                        android:layout_below="@+id/isipengumumanumumTV"/>

                    <TextView
                        android:id="@+id/tglberakhirpengumumanumumTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:text="00:00"
                        android:textAlignment="textStart"
                        android:textColor="@color/abuabu"
                        android:textSize="12sp"
                        android:layout_below="@+id/tgltayangpengumumanumumTV"/>
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>