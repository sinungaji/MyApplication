<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvBerkas"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            app:cardUseCompatPadding="true"
            app:contentPadding="@dimen/fab_margin_pengumuman">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Judul File"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:padding="10dp"/>

                <TextView
                    android:id="@+id/inputJudulFile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/textviewcardview"
                    android:fontFamily="sans-serif-light"
                    android:padding="10dp"
                    android:paddingBottom="20dp"
                    android:textColor="@color/text"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Tanggal Posting File"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:padding="10dp"/>

                <TextView
                    android:id="@+id/inputtanggalposting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/textviewcardview"
                    android:fontFamily="sans-serif-light"
                    android:padding="10dp"
                    android:paddingBottom="20dp"
                    android:textColor="@color/text"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Keterangan File"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:padding="10dp"/>

                <TextView
                    android:id="@+id/inputketeranganfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/textviewcardview"
                    android:fontFamily="sans-serif-light"
                    android:padding="10dp"
                    android:paddingBottom="20dp"
                    android:textColor="@color/text"
                    android:textSize="15sp"
                    android:maxLines="1"/>

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/folder"
                    android:backgroundTint="@color/abuabu"
                    android:layout_gravity="end"
                    android:padding="10dp"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/next"
                    android:backgroundTint="@color/abuabu"
                    android:layout_gravity="end"
                    android:layout_marginTop="35dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>