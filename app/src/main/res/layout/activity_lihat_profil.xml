                    android:paddingBottom="20dp"
                    android:textColor="@color/abuabu"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nomor Telp"
                    android:drawablePadding="10dp"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-condensed"/>

                <TextView
                    android:id="@+id/nomorTelpET"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/textview"
                    android:padding="10dp"
                    android:fontFamily="sans-serif-light"
                    android:paddingBottom="20dp"
                    android:textColor="@color/abuabu"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gol Darah"
                    android:drawablePadding="10dp"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-condensed"/>

                <TextView
                    android:id="@+id/golDarahET"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/textview"
                    android:padding="10dp"
                    android:fontFamily="sans-serif-light"
                    android:paddingBottom="20dp"
                    android:textColor="@color/abuabu"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pendidikan Terakhir"
                    android:drawablePadding="10dp"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-condensed"/>

                <TextView
                    android:id="@+id/pendidikanTerakhirET"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/textview"
                    android:padding="10dp"
                    android:fontFamily="sans-serif-light"
                    android:paddingBottom="20dp"
                    android:textColor="@color/abuabu"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tanggal Masuk Kerja"
                    android:drawablePadding="10dp"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-condensed"/>

                <TextView
                    android:id="@+id/tanggalMasukKerjaET"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/textview"
                    android:padding="10dp"
                    android:fontFamily="sans-serif-light"
                    android:paddingBottom="20dp"
                    android:textColor="@color/abuabu"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status Pernikahan"
                    android:drawablePadding="10dp"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-condensed"/>

                <TextView
                    android:id="@+id/statusPernikahanET"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/textview"
                    android:padding="10dp"
                    android:fontFamily="sans-serif-light"
                    android:paddingBottom="20dp"
                    android:textColor="@color/abuabu"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status Kepegawaian"
                    android:drawablePadding="10dp"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-condensed"/>

                <TextView
                    android:id="@+id/statusKepegawaianET"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/textview"
                    android:padding="10dp"
                    android:fontFamily="sans-serif-light"
                    android:paddingBottom="20dp"
                    android:textColor="@color/abuabu"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jenjang"
                    android:drawablePadding="10dp"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-condensed"/>

                <TextView
                    android:id="@+id/jenjangET"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/textview"
                    android:padding="10dp"
                    android:fontFamily="sans-serif-light"
                    android:paddingBottom="20dp"
                    android:textColor="@color/abuabu"
                    android:textSize="15sp"/>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</androidx.core.widget.NestedScrollView>